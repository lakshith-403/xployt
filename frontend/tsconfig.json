{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@ui_lib/*": ["src/ui_lib/*"],
      "@components/*": ["src/components/*"],
      "@data/*": ["src/data/*"],
      "@views/*": ["src/views/*"],
      "@assets/*": ["src/assets/*"],
      "@services/*": ["src/services/*"]
    }
  },
  "include": ["./src/**/*", "src/types/html.d.ts"]
}
